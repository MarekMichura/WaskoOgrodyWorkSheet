{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker Compose Up",
      "type": "shell",
      "command": "docker-compose up --build -d ${input:dockerName}",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Down",
      "type": "shell",
      "command": "docker-compose down && yes | docker container prune",
      "problemMatcher": []
    },
    {
      "label": "Create db",
      "type": "shell",
      "command": "docker-compose run --build initialize-db ${input:migrationName}",
      "problemMatcher": [],
    },
    {
      "label": "Delete data",
      "type": "shell",
      "command": "rm -rf ${input:remove}",
      "problemMatcher": [],
    },
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Wprowadź nazwę migracji",
      "default": ""
    },
    {
      "id": "dockerName",
      "type": "pickString",
      "description": "Wybierz opcje",
      "options": [
        "server-release",
        "server-development"
      ],
      "default": "server-development"
    },
    {
      "id": "remove",
      "type": "pickString",
      "description": "Wybierz opcje",
      "options": [
        "./DB/data/* ./DB/log/* ./DB/secrets/* ./Server/Migrations/*",
        "./DB/data/* ./DB/log/* ./DB/secrets/*",
        "./Server/Migrations/*",
      ],
      "default": "./DB/data/* ./DB/log/* ./DB/secrets/*"
    }
  ]
}